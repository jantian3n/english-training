// Prisma Schema for English Training App with SM-2 Algorithm

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// User Model with Role-Based Access Control
model User {
  id            String    @id @default(cuid())
  email         String    @unique
  name          String?
  password      String    // Hashed with bcrypt
  role          Role      @default(USER)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // Relations
  accounts      Account[]
  sessions      Session[]
  learningRecords LearningRecord[]

  @@map("users")
}

enum Role {
  ADMIN
  USER
}

// NextAuth.js v5 Models
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

// Word Model with AI-Generated Content
model Word {
  id              String   @id @default(cuid())
  word            String   @unique
  pronunciation   String?  // IPA notation
  definition      String   // Primary definition
  definitionCn    String   // Chinese translation
  exampleSentence String   // AI-generated example
  exampleCn       String   // Chinese translation of example
  difficulty      Int      @default(1) // 1-5 difficulty level
  tags            String?  // JSON array of tags
  isActive        Boolean  @default(true)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  // Word Set relation
  wordSetId       String?
  wordSet         WordSet? @relation(fields: [wordSetId], references: [id], onDelete: SetNull)

  // Relations
  learningRecords LearningRecord[]
  quizOptions     QuizOption[]

  @@index([wordSetId])
  @@map("words")
}

// Word Set (Folder) for organizing words
model WordSet {
  id          String   @id @default(cuid())
  name        String   @unique
  description String?
  color       String   @default("#1976d2") // Material UI primary color
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  words       Word[]

  @@map("word_sets")
}

// Learning Record with SM-2 Algorithm Fields
model LearningRecord {
  id              String   @id @default(cuid())
  userId          String
  wordId          String

  // SM-2 Algorithm Fields
  easeFactor      Float    @default(2.5) // Initial EF = 2.5
  interval        Int      @default(0)   // Days until next review (0 = new)
  repetitions     Int      @default(0)   // Number of consecutive correct answers
  nextReviewDate  DateTime @default(now())

  // Learning Stats
  totalReviews    Int      @default(0)
  correctCount    Int      @default(0)
  incorrectCount  Int      @default(0)
  lastQuality     Int?     // Last SM-2 quality rating (0-5)

  // Timestamps
  firstLearnedAt  DateTime @default(now())
  lastReviewedAt  DateTime @default(now())
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  // Relations
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  word            Word     @relation(fields: [wordId], references: [id], onDelete: Cascade)

  @@unique([userId, wordId])
  @@index([userId, nextReviewDate])
  @@map("learning_records")
}

// Quiz Options for Multiple Choice
model QuizOption {
  id              String   @id @default(cuid())
  wordId          String
  optionText      String   // Distractor definition
  isCorrect       Boolean  @default(false)
  createdAt       DateTime @default(now())

  word            Word     @relation(fields: [wordId], references: [id], onDelete: Cascade)

  @@map("quiz_options")
}
